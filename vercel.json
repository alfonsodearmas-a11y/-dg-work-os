{
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/ai/precompute-daily",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/notifications/generate",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/tm/cron/overdue",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/tm/cron/reminders",
      "schedule": "0 12 * * *"
    }
  ]
}
