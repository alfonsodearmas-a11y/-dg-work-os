# =============================================================================
# DG Work OS — Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values.
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.

# Login Gate
APP_ACCESS_CODE=

# Database (PostgreSQL — Ministry metrics tables)
PG_HOST=
PG_PORT=5432
PG_DATABASE=ministry_dashboard
PG_USER=
PG_PASSWORD=

# Supabase (Documents, tasks, projects, calendar)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Authentication (JWT — data entry/admin routes only)
JWT_SECRET=
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Notion API
NOTION_API_KEY=
NOTION_TASKS_DATABASE_ID=
NOTION_MEETINGS_DATABASE_ID=

# Google Calendar
# GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET are always required.
# GOOGLE_REFRESH_TOKEN is optional if connected via Admin > Google Calendar.
# For the OAuth flow, add this redirect URI in Google Cloud Console:
#   https://YOUR_DOMAIN/api/integrations/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
GOOGLE_CALENDAR_ID=

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_APP_PASSWORD=

# AI (Anthropic Claude)
ANTHROPIC_API_KEY=
